<div class="container">
  <h4 class="title bg-light m-4 text-center"><strong><%= @customer.name %>さんの会員情報編集</strong></h4>
  <div class="row">
    <div class="col-6 m-4">
      <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
      <table class="table">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>名前</th>
          <td><%= @customer.name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>

        <div class="field row">
          <label for="inputStatus" class="col-3 col-form-label">会員ステータス</label>
          <div class="col-3">
            <%= f.radio_button :is_active, true, id:'inputStatusTrue' %>
            <label for="inputStatusTrue" class="col-form-label">有効</label>
            <%= f.radio_button :is_active, false, id:'inputStatueFalse' %>
            <label for="inputStatusFalse" class="col-form-label">退会</label>
          </div>
        </div>

        <div class="col-3 m-4">
          <%= f.submit "変更を保存", class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>