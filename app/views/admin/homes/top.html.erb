<div class="container">
  <div class="row">
    <div class="col">
      <div class="m-4 w-25 bg-light text-center">
        <h2>会員一覧</h2>
      </div>
    
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customers| %>
          <tr>
            <td><%= customers.id %></td>
            <td>
              <%= link_to admin_customer_path(customers.id) do %>
              <%= customers.name %>
              <% end %>
            </td>
            <td><%= customers.email %></td>
            <td>
              <% if customers.is_active %>
                <p class="text-success"><strong>有効</strong></p>
              <% else %>
                <p class="text-danger"><strong>退会</strong></p>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
      <div class="col d-flex justify-content-center" >
      <%= paginate @customers %>
      </div>
    </div>
  </div>
</div>