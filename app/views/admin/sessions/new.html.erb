<div class="box1">
  <div class="box-inner">

    <h2>ログイン</h2>
    
    <%= form_with model: @admin, url: admin_session_path do |f| %>
    
      <div class="box-email">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email" %>
      </div>
    
      <div class="box-password">
        <%= f.label :password %><br />
        <%= f.password_field :password, required: true, autocomplete: "current-password" %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    
      <div class="box-newusr">
        <%= f.submit "Log in" %>
      </div>
    <% end %>
    
    <%= render "admin/shared/links" %>

  </div>
</div>